{{#view App.ModalView cancelAction='cancel'}}
	<form class='edit' {{action 'save' on='submit'}}>
        {{#view App.InputView title='Name' errorName='name'}}
            {{input value=name autofocus='autofocus'}}
        {{/view}}

        {{#view App.InputView title='Quantity' errorName='quantity'}}
            {{input value=quantity}}
        {{/view}}

        {{#view App.InputView title='Units' errorName='unit_id'}}
            {{view Ember.Select
            content=units
            optionValuePath='content.id'
            optionLabelPath='content.name'
            selection=model.unit
            prompt='Choose a Unit'}}
        {{/view}}

		<button class='action-cancel left' {{action 'cancel'}} type='reset'>Cancel</button>
		<button class='action-save right' {{action 'save'}} type='submit'>Save</button>
	</form>
{{/view}}